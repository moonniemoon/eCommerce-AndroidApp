<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="25dp"
    app:cardCornerRadius="15dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:id="@+id/wishlist_productImage"
            android:layout_marginTop="10dp"
            android:elevation="0dp"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            />

 <!--       <ImageView
            android:id="@+id/wishlist_productImage"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop">
        </ImageView>-->

        <TextView
            android:id="@+id/wishlist_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/wishlist_productImage"
            android:fontFamily="sans-serif-light"
            android:text="Name"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wishlist_productCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/wishlist_productName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/wishlist_productImage"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="-22dp"
            android:fontFamily="sans-serif-light"
            android:text="Seller"
           />

        <TextView
            android:id="@+id/wishlist_productID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/wishlist_productCompanyName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_toEndOf="@+id/wishlist_productImage"
            android:layout_marginBottom="-22dp"
            android:text="ID"
           />

        <TextView
            android:id="@+id/wishlist_productCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/wishlist_productID"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_toEndOf="@+id/wishlist_productImage"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="-22dp"
            android:text="Category"
             />


        <TextView
            android:id="@+id/wishlist_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/wishlist_productImage"
            android:text="$"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/constan"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="153dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/wishlist_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/dark_gray"
            android:layout_toRightOf="@+id/wishlist_dollar"
            android:fontFamily="@font/constan"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="155dp"
            android:layout_marginStart="3dp"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wishlist_cartButton"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="135dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/wishlist_productImage"
            android:background="@drawable/wishlist_button_2"
            android:text="Add to Cart"
            android:gravity="center_horizontal|top"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="13sp"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            app:iconTint="@color/pink" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>