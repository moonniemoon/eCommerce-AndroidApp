<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:labelVisibilityMode="unlabeled"
            app:itemRippleColor="@null"
            app:itemIconTint="@drawable/selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_menu"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            >

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="fill_parent"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="70dp"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:textSize="15sp"
                android:hint="Search"
                android:fontFamily="sans-serif-light"
                android:paddingEnd="12dp"
                android:background="@drawable/home_custom_search_bar"
                android:drawableStart="@drawable/home_search_bar"
                android:autofillHints="Search"
                android:inputType="text" />

            <ImageButton
                android:id="@+id/barcode_button"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="17dp"
                android:background="@null"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/home_barcode"
                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="62dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:context=".activities.user.HomeActivity"
                    >


                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="190dp"
                        android:orientation="horizontal"
                        >

                        <RadioButton
                            android:id="@+id/radio_women"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:padding="4dp"
                            android:fontFamily="@font/constan"
                            android:text="@string/women_text"
                            android:textSize="23sp"
                            android:textColor="@color/black" />

                        <RadioButton
                            android:id="@+id/radio_men"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:button="@null"
                            android:padding="10dp"
                            android:fontFamily="@font/constan"
                            android:text="MEN"
                            android:textSize="23sp"
                            android:textColor="@color/black"/>
                    </RadioGroup>

                    <Button
                        android:id="@+id/button_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginStart="210dp"
                        android:layout_marginEnd="2dp"
                        android:fontFamily="@font/constan"
                        android:textSize="23sp"
                        android:text="CATEGORIES"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        >

                    </Button>

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_menu"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="93dp"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>

