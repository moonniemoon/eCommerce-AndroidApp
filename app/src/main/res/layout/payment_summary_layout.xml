<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginTop="0dp"
    app:cardElevation="0dp"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/payment_productImage"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:id="@+id/payment_productName"
            android:layout_toEndOf="@+id/payment_productImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light"
            android:text="Name"
            android:textColor="@color/dark_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/payment_productCompanyName"
            android:layout_toEndOf="@+id/payment_productImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/payment_productName"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:layout_marginBottom="-22dp"
            android:text="Seller"
            />

        <TextView
            android:id="@+id/payment_productID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/payment_productCompanyName"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/payment_productImage"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="-22dp"
            android:text="ID"
            />

        <TextView
            android:id="@+id/payment_productCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/payment_productID"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@+id/payment_productImage"
            android:layout_marginBottom="-22dp"
            android:text="Category"
            />

        <TextView
            android:id="@+id/payment_productQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/payment_productImage"
            android:layout_alignBottom="@+id/payment_productCategory"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="-22.5dp"
            android:text="Quantity"
            />


        <TextView
            android:id="@+id/payment_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/constan"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="144dp"
            android:layout_marginStart="292dp"/>

        <TextView
            android:id="@+id/payment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/dark_gray"
            android:layout_toRightOf="@+id/payment_dollar"
            android:fontFamily="@font/constan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="146dp"
            android:layout_marginStart="5dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>