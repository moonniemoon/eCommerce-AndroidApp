<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <ImageView
        android:id="@+id/bbackbackbackbutton"
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="5dp"
        android:rotationX="0"
        android:rotationY="-180"
        android:src="@drawable/back_icon"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<!--
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
       android:layout_marginBottom="100dp"
        android:background="@color/gray"
        >
    </FrameLayout>-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_recycler_menu"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/choose_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/choose_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_blackbutton"
                android:scaleType="centerInside"
                android:src="@drawable/addressbook_plus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="26dp"
                android:text="Add new address"
                android:textSize="20sp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>

