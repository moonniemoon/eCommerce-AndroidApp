<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="15dp"
    app:cardElevation="30dp"
    app:cardCornerRadius="20dp"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myorders_detailsButton"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:text="Details"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#404040"
            android:fontFamily="sans-serif"
            android:layout_marginTop="60dp"
            android:background="@drawable/myorders_button" />

        <TextView
            android:id="@+id/myorders_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/payment_productImage"
            android:text="05-12-2021"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/myorders_textQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="-22dp"
            android:text="Quantity: "
            />

        <TextView
            android:id="@+id/myorders_quantity"
            android:layout_toEndOf="@+id/myorders_textQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_marginStart="2dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="-22dp"
            android:text="3"
            />

        <TextView
            android:id="@+id/myorders_textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myorders_textQuantity"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="-22dp"
            android:text="Total Amount: "
            />

        <TextView
            android:id="@+id/myorders_Total"
            android:layout_toEndOf="@+id/myorders_textTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/myorders_textQuantity"
            android:layout_marginStart="2dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/dark_gray"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="-22dp"
            android:text="3"
            />


        <TextView
            android:id="@+id/myorders_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="-22.5dp"
            android:text="Delivered"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>